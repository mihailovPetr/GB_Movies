<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/recycler_item_corner_radius"
    app:cardElevation="@dimen/recycler_item_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moviesRecyclerItemImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImage"
            android:background="@drawable/movie"
            android:scaleType="fitXY" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/moviesRecyclerItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/recycler_item_padding"
            android:textSize="@dimen/recycler_item_text_size"
            tools:text="Фильм" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
